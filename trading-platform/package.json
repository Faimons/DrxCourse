{
  "name": "trading-platform",
  "version": "1.0.0",
  "description": "Trading Learning Platform - Full Stack Application",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "npm run dev",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup": "npm run install:all && cd backend && node scripts/setup-database.js",
    "test": "cd backend && npm test",
    "lint": "cd frontend && npm run lint"
  },
  "keywords": [
    "trading",
    "education",
    "react",
    "nodejs",
    "postgresql"
  ],
  "author": "DRX Trading Academy",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Faimons/DrxCourse.git"
  }
}
